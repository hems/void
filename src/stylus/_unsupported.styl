@import '_variables'
@import '_mixins'

html.{NS}

	#unsupported
	#notfound
		
		background: url('../img/ui/error-background.jpg') no-repeat
		background-size: cover
		background-position: 50%
				
		width: 100%
		height: 100%
		
		.message
			
			$width  = 500px
			$height = 385px

			text-align: center
			top: 50%
			left: 50%
			
			remify(width, $width)
			remify(height, $height)
			remify(margin-left, -($width/2))
			remify(margin-top, -($height/2))
			
			p
				remify(margin-bottom, 10px)
				
			a
				text-decoration: underline
					
		h2
			text-align: center
			font-size: 50px
			remify(letter-spacing, 15px)
			
		.the-future
			transform: scale(0.88)
			position: relative
			margin: 0 auto
				
			remify(width, 293px)
			remify(height, 266px)
			
		.nyan
			remify(top, 18px)
			remify(left, 94px)
			
		+mobile()
			h2
				font-size: 25px
				remify(letter-spacing, 5px)
				
			.the-future
				transform-origin: 50%
				transform: scale(0.7)
				remify(height, 220px)
				
				+mobile(orientation:landscape)
					transform: scale(0.3)
					remify(height, 120px)
				
			.message
				
				top: 40%
			
				$width  = 300px
				$height = 200px
				
				remify(width, $width)
				remify(height, $height)
				remify(margin-left, -($width/2))
				remify(margin-top, -($height/2))
				
				+mobile(orientation:landscape)
				
					$width  = 400px
					
					remify(width, $width)
					remify(height, $height)
					remify(margin-left, -($width/2))
					remify(margin-top, -($height/2))
